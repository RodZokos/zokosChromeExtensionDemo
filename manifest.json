{
    "name": "Zokos file upload extension",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "File upload directly to Zokos",
    "homepage_url": "https://zokos.com",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Upload something!"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}
